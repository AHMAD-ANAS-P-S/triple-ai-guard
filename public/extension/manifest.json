{
  "manifest_version": 3,
  "name": "Zerophish AI - Phishing Protection",
  "version": "1.0.0",
  "description": "Triple-AI powered phishing detection for websites and Gmail",
  "permissions": [
    "activeTab",
    "tabs",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["gmail-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "behavioral-detector.js", "qr-detector.js", "link-scanner.js", "isolation-mode.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
